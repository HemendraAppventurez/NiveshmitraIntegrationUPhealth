@model CCSHealthFamilyWelfareDept.Models.AGCModel
@{
    ViewBag.Title = "RegistrationPrintout";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link type="text/css" href="~/css/reportstyle.css" rel="stylesheet" />
    <link type="text/css" href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link type="text/css" href="~/css/font-awesome.min.css" rel="stylesheet" />
    <title>AGC Details</title>
</head>
<body id="content" style="margin: 0px 0px; padding: 15px 0px">
   @if(Model!=null)
   {
     <div class="pbtn" style="width: 1170px; margin: 0 auto;">
        <button type="button" class="btn btn-warning pull-right" style="border-radius: 0; width: 80px; margin-bottom: 8px;" onclick="PrintDoc()">Print</button>
    </div>
    <div class="form-wrap2">
        <table class="tbl-head" style="border-top: 6px solid #666; border-bottom: 6px solid #666; border-left: 1px dashed #666; border-right: 1px dashed #666; font-size: 15px; border-collapse: collapse" cellpadding="0" cellspacing="0" width="100%">
            <tbody>
                <tr>
                    <td width="20%">
                        <img class="logo" style="margin-left: 15px; margin-top: 10px; margin-bottom: 10px" alt="Logo" title="Logo" src="../images/up-logo-en.png"></td>
                    <td align="left" width="80%">
                        <h2 style="padding: 0px; margin: 8px 0px 0px 0px; font-size: 22px; font-weight: bold;"><strong>Department of Medical Health and Family Welfare</strong></h2>
                        <h4 style="padding: 0px; margin: 0px; text-align: left; font-size: 14px; font-weight: bold">Government  of Uttar Pradesh</h4>
                        <h3 class="headinf-print" style="padding: 0px; margin: 17px 0px 0px 0px; text-align: left; text-decoration: underline; font-size: 16px; font-weight: bold;">Online Application Form for Registration of Age Certificate</h3>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="form-wrap">
        <p style="margin: 0px; padding: 0px; font-size: 18px; font-weight: bold">To, <span style="float: right">Application Number : @Model.registrationNo</span></p>
        <p style="margin: 0px 0px 0px 50px; padding: 0px;"><strong>The Chief Medical Office,</strong></p>
        <p style="margin: 0px 0px 0px 50px; padding: 0px;"><strong>Distt :</strong> @Model.DistrictName</p>
        <p style="margin: 0px 0px 0px 50px; padding: 0px;"><strong>Uttar Pradesh</strong></p>
        <p style="margin: 0px; padding: 0px; font-size: 18px; font-weight: bold">Sir,</p>
        <p style="margin: 0px 0px 0px 50px; padding: 0px;"><strong>Kindly Register my Age Certificate details of which are given as below</strong></p>
        <h3 style="margin: 10px 0px 10px 0px; font-size: 16px; font-weight: bold; padding: 10px 0px; border-bottom: 1px dashed #000; text-transform: uppercase;"><span style="margin: 0px 15px 0px 0px; padding: 0px;">1</span>Requester's Details</h3>
        <table cellpadding="0" cellspacing="0" width="100%" class="table-user-information table table-bordered table-striped" style="font-size: 15px; border-collapse: collapse">
            <tbody>
                <tr>
                    <td width="25%" style="font-weight: 600;">Requested By</td>
                    <td width="25%">
                        @Model.applicantTypeName
                    </td>
                    <td width="25%" style="font-weight: 600;">@Model.applicantTypeName</td>
                    <td width="25%">
                        @Model.applicantSubTypeName
                    </td>
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Order Detail</td>
                    <td width="25%">
                        @Model.orderDetail
                    </td>
                    <td width="25%" style="font-weight: 600;">Order Number</td>
                    <td width="25%" align="center">
                        @Model.orderNo
                    </td>
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Order Date</td>
                    <td width="25%">
                        @Model.orderDate
                    </td>
                    <td width="25%" style="font-weight: 600;">Order Detail Copy</td>
                    <td width="25%" align="center">
                        <div style="width: 25px; height: 25px; border: 1px solid #bdbdbd;"></div>
                    </td>
                </tr>
            </tbody>
        </table>

        <h3 style="margin: 10px 0px 10px 0px; font-size: 16px; font-weight: bold; padding: 10px 0px; border-bottom: 1px dashed #000"><span style="margin: 0px 15px 0px 0px; padding: 0px;">2</span>BROUGHT BY DETAILS</h3>
        <table cellpadding="0" cellspacing="0" width="100%" class="table-user-information table table-bordered table-striped" style="font-size: 15px; border-collapse: collapse">
            <tbody>
                <tr>
                    <td width="25%" style="font-weight: 600;">Name</td>
                    <td width="25%">
                        @Model.fullName
                    </td>
                    <td width="25%" style="font-weight: 600;">Gender</td>
                    <td width="25%">@Model.gender</td>
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Id Number</td>
                    <td width="25%">
                        @Model.idNumber
                    </td>
                    <td width="25%" style="font-weight: 600;">Id Type</td>
                    <td width="25%">
                        @Model.idTypeName
                    </td>
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Mobile Number</td>
                    <td width="25%">
                        @Model.mobileNo
                    </td>
                    <td width="25%" style="font-weight: 600;">Email</td>
                    <td width="25%">@Model.emailId @*@DateTime.Parse(@Model.dob).ToShortDateString()*@
                    </td>
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Address</td>
                    <td width="25%">
                        @Model.address
                    </td>
                    <td width="25%" style="font-weight: 600;">State</td>
                    <td width="25%">
                        @Model.StateName
                    </td>
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">District</td>
                    <td width="25%">
                        @Model.DistrictName
                    </td>
                    <td width="25%" style="font-weight: 600;">Pin Code</td>
                    <td width="25%">
                        @Model.pinCode
                    </td>
                </tr>

                <tr>
                    <td width="25%" style="font-weight: 600;">Id Document</td>
                    <td width="25%" align="center">
                        <div style="width: 25px; height: 25px; border: 1px solid #bdbdbd;"></div>
                    </td>
                    <td width="25%" style="font-weight: 600;"></td>
                    <td width="25%"></td>
                </tr>
                <tr>
                </tr>
            </tbody>
        </table>

        <h3 style="margin: 10px 0px 10px 0px; font-size: 16px; font-weight: bold; padding: 10px 0px; border-bottom: 1px dashed #000"><span style="margin: 0px 15px 0px 0px; padding: 0px;">3</span>PERSON DETAILS</h3>
        <table cellpadding="0" cellspacing="0" width="100%" class="table-user-information table table-bordered table-striped" style="font-size: 15px; border-collapse: collapse">
            <tbody>
                <tr>
                    <td width="25%" style="font-weight: 600;">Name</td>
                    <td width="25%">
                        @Model.susName
                    </td>
                    <td width="25%" style="font-weight: 600;">Father Name</td>
                    <td width="25%">
                        @Model.susFatherName
                    </td>
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Mother Name</td>
                    <td width="25%">@Model.susMotherName</td>
                    <td width="25%" style="font-weight: 600;">Father Age</td>
                    @if (Model.susFatherAge == 0)
                    {
                        <td width="25%"></td>
                    }
                    else
                    {
                        <td width="25%">@Model.susFatherAge</td>
                    }

                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Mother Age</td>
                     @if (Model.susMotherAge== 0)
                    {
                        <td width="25%"></td>
                    }
                    else
                    {
                        <td width="25%">@Model.susMotherAge</td>
                    }
                    <td width="25%" style="font-weight: 600;">Mobile Number</td>
                    <td width="25%">@Model.susMobileNo</td>
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Email</td>
                    <td width="25%">@Model.susEmail</td>
                    <td width="25%" style="font-weight: 600;">Date Of Appointment</td>
                    <td width="25%">@DateTime.Parse(@Model.appointmentDate).ToShortDateString()</td>
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Address</td>
                    <td width="25%">@Model.susaddress</td>
                    <td width="25%" style="font-weight: 600;">State</td>
                    <td width="25%">@Model.susStateName</td>
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">District</td>
                    <td width="25%">@Model.susDistrictName</td>
                    <td width="25%" style="font-weight: 600;">Pin Code</td>
                    <td width="25%">@Model.suspinCode</td>
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Mark of Identification</td>
                    <td width="25%">@Model.markOfIdentification</td>
                    <td width="25%" style="font-weight: 600;">Photograph</td>
                    <td width="25%" align="center">
                        <div style="width: 25px; height: 25px; border: 1px solid #bdbdbd;"></div>
                    </td>

                </tr>
                <tr>

                    <td width="25%" style="font-weight: 600;">Thumb Impression</td>
                    <td width="25%" align="center">
                        <div style="width: 25px; height: 25px; border: 1px solid #bdbdbd;"></div>
                    </td>

                </tr>
                <tr>
                </tr>
            </tbody>
        </table>




        <table cellpadding="0" cellspacing="0" width="100%" class="table-user-information table table-bordered table-striped" style="font-size: 15px; border-collapse: collapse">
            <tbody>
                <tr>
                    <td width="25%">
                        <p style="text-align: left;">&nbsp;</p>
                        <p><strong>Date</strong></p>
                    </td>
                    <td width="25%">
                        <p style="text-align: left;">&nbsp;</p>
                        <p style="text-align: left;"><strong>Place</strong></p>
                    </td>
                    <td width="50%">
                        <p style="text-align: center;">
                            <strong>&nbsp;</strong>
                        </p>
                        <p style="text-align: center; font-weight: 600;">Signature of Person Incharge </p>
                    </td>
                </tr>

            </tbody>
        </table>
        @*<p style="margin: 0px; padding: 0px;"><strong>Note :</strong></p>
        <p style="margin: 0px 0px 10px 0px; padding: 0px 0px;"><span style="margin: 0px 15px 0px 0px; padding: 0px;">1.</span>It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is </p>
        <p style="margin: 0px 0px 10px 0px; padding: 0px 0px;"><span style="margin: 0px 15px 0px 0px; padding: 0px;">2.</span>It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is </p>
        <p style="margin: 0px 0px 10px 0px; padding: 0px 0px;"><span style="margin: 0px 15px 0px 0px; padding: 0px;">3.</span>It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is </p>*@
    </div>
   }
    else{
   <table>
       <thead>
           <th>Application Number Wrong ! Please check your Application Number</th>
       </thead>
   </table>
   }
       <style>
        .form-wrap {
            width: 1170px;
            margin: auto !important;
            padding: 15px !important;
            border: 1px dashed #000 !important;
        }

        .form-wrap2 {
            width: 1170px;
            margin: 0 auto;
        }

        #childlist th a {
            color: #000;
            text-decoration: none;
        }

        @@media print {
            .form-wrap {
                width: 700px !important;
                margin: auto !important;
                padding: 15px !important;
                border: 1px dashed #000 !important;
            }

            .form-wrap2 {
                width: 700px !important;
                margin: auto !important;
            }

            .tbl-head {
                width: 700px !important;
                /*margin-left: 9px;*/
            }

            #childlist th a {
                color: #000;
                text-decoration: none;
            }
        }
    </style>

    <script src="~/js/jquery-1.11.3.min.js"></script>

    <script>
        $(document).ready(function () {

        });

    </script>

    <script>

        function PrintDoc() {

            var toPrint = document.getElementById('content');

            var popupWin = window.open('', '_blank', 'left=100,top=100,width=1100,height=600,tollbar=0,scrollbars=1,status=0,resizable=1');

            popupWin.document.open();

            popupWin.document.write('<html><title>Department of Health and Family Welfare</title><link href="../css/bootstrap.min.css" rel="stylesheet" /><link type="text/css" href="../css/font-awesome.min.css" rel="stylesheet" /><link href="../css/reportstyle.css" rel="stylesheet" /> <style>.pbtn{display:none;} a:link:after, a:visited:after {content: normal !important} a[href]:after {content: normal !important;} .owner{margin-bottom: 45px !important;} </style> </head><body onload="window.print()">')

            popupWin.document.write(toPrint.innerHTML);

            popupWin.document.write('</body></html>');

            popupWin.document.close();

        }
    </script>
</body>
</html>
