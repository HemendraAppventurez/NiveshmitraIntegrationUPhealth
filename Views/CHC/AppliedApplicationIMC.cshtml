@model CCSHealthFamilyWelfareDept.Models.ProcessType
@{
    ViewBag.Title = "AppliedApplicationIMC";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using CCSHealthFamilyWelfareDept.Models

@{
    SessionManager SM = new SessionManager();
}

<div class="content-title">
    <h3 class="main-title">
        <div class="col-md-12 text-left">टीकाकरण प्रमाणपत्र हेतु अनुरोध <span class="small display-block">Issuance of Immunization Certificate </span></div>
    </h3>
</div>

<div id="content" class="dashboard padding-20 margin-bottom-50">
    <div class="row">
        <div class="col-md-12">
            <ul class="circle">
                <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("ReceivedApplicationIMC", "CHC")" class="red">
                        <img src="@Url.Content("~/images/womens-health.png")">
                        1. कुल लंबित आवेदन 
                      <span class="nmicon2">Total Pending Application</span>
                        <span class="nmicon badge">@Model.totalAppReceived</span> </a></li>
                <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("InProcessApplicationIMC", "CHC")" class="red">
                        <img src="@Url.Content("~/images/womens-health.png")">
                        2. आवेदन प्रक्रिया में है
                      <span class="nmicon2">In-Process Application </span>
                        <span class="nmicon badge">@Model.totalAppInProcess</span> </a></li>
                <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("ApprovedApplicationIMC", "CHC")" class="indigo">
                        <img src="@Url.Content("~/images/immunizations.png")">
                        3. स्वीकृत आवेदन 
                      <span class="nmicon2">Approved Application </span>
                        <span class="nmicon badge">@Model.totalAppApproved</span> </a></li>
                <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("RejectedApplicationIMC", "CHC")" class="cyan">
                        <img src="@Url.Content("~/images/registration.png")">
                        4. अस्वीकृत आवेदन 
                      <span class="nmicon2">Rejected Application </span>
                        <span class="nmicon badge">@Model.totalAppRejected</span> </a></li>
            </ul>
        </div>
        <!-- InstanceEndEditable -->
    </div>

    <br />
    @if (SM.RollID != 8)
    { 
        <h4 style="border-bottom: 1px solid #ccc; padding-bottom: 10px;">Application Form - Counter Registration</h4>

        <div class="row">
            <div class="col-md-12">
                <ul class="circle">
                    <li class="col-md-3 col-sm-6 col-xs-12">
                        <a href="@Url.Action("IMCRegistration", "AppRegistration")" class="red">
                            <img src="@Url.Content("~/images/womens-health.png")">
                            New Application </a></li>
                    <li class="col-md-3 col-sm-6 col-xs-12">
                        <a href="@Url.Action("ViewIMCInComplete", "AppRegistration")" class="red">
                            <img src="@Url.Content("~/images/womens-health.png")">
                            Incomplete Application </a></li>
                    <li class="col-md-3 col-sm-6 col-xs-12">
                        <a href="@Url.Action("ViewIMCComplete", "AppRegistration")" class="indigo">
                            <img src="@Url.Content("~/images/immunizations.png")">
                            Complete Application </a></li>
                </ul>
            </div>
        </div>
    }
</div>
<div class="clearfix"></div>
