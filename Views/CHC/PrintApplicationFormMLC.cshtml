        <p style="margin: 0px; padding: 0px; font-size: 18px; font-weight: bold">Sir,</p>
        <p style="margin: 0px 0px 0px 50px; padding: 0px;"><strong>Kindly Register my Medico-Legal Certificate details of which are given as below</strong></p>
        <h3 style="margin: 10px 0px 10px 0px; font-size: 16px; font-weight: bold; padding: 10px 0px; border-bottom: 1px dashed #000"><span style="margin: 0px 15px 0px 0px; padding: 0px;">1</span>Brought By:</h3>
        <table cellpadding="0" cellspacing="0" width="100%" class="table-user-information table table-bordered table-striped" style="font-size: 15px; border-collapse: collapse">
            <tbody>
                <tr>
                    <td width="25%" style="font-weight: 600;">Brought By Name</td>
                    <td width="25%">
                        @Model.fullName
                    </td>
                    @if (Model.broughtByDesignation != "")
                    {
                    <td width="25%" style="font-weight: 600;">Designation</td>
                    <td width="25%">@Model.broughtByDesignation</td>
                    }
                    else
                    {
                         <td></td>
                         <td></td>
                    }
                </tr>
                @if (Model.patientBroughtBy == "Police")
                {
                <tr>
                    <td width="25%" style="font-weight: 600;">Patient Brought By</td>
                    <td width="25%">@Model.patientBroughtBy</td>
                    <td width="25%" style="font-weight: 600;"></td>
                    <td width="25%"></td>
                 </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Police Id</td>
                    <td width="25%">@Model.idNo</td>
                    <td width="25%" style="font-weight: 600;">FIR No.</td>
                    <td width="25%">@Model.FIRno</td>
                 </tr>
                }
                else if (Model.patientBroughtBy == "Relative")
                {
                <tr>
                    <td width="25%" style="font-weight: 600;">Patient Brought By</td>
                    <td width="25%">@Model.patientBroughtBy</td>
                    <td width="25%" style="font-weight: 600;">Relation With Patient</td>
                    <td width="25%">@Model.broughtByPersonrelation</td>
                 </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Id Type</td>
                    <td width="25%">@Model.idTypeName</td>
                    <td width="25%" style="font-weight: 600;">Id No.</td>
                    <td width="25%">@Model.idNumber</td>
                 </tr>
                }
                else if (Model.patientBroughtBy == "Unknown")
                {
                <tr>
                    <td width="25%" style="font-weight: 600;">Patient Brought By</td>
                    <td width="25%">@Model.patientBroughtBy</td>
                    <td width="25%" style="font-weight: 600;"></td>
                    <td width="25%"></td>
                 </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Id Type</td>
                    <td width="25%">@Model.idTypeName</td>
                    <td width="25%" style="font-weight: 600;">Id No.</td>
                    <td width="25%">@Model.idNumber</td>
                 </tr>
                }
                @*  <tr>
                    <td width="25%" style="font-weight: 600;">Patient Brought By</td>
                    <td width="25%">@Model.patientBroughtBy</td>
                    @if (Model.patientBroughtBy == "Relative")
                    {
                        <td width="25%" style="font-weight: 600;">Relation With Patient</td>
                        <td width="25%">@Model.broughtByPersonrelation</td>
                    }
                    else if (Model.patientBroughtBy == "Police")
                    {
                        <td width="25%" style="font-weight: 600;">Police Id</td>
                        <td width="25%">@Model.idNo</td>
                    }
                    else
                    {
                        <td></td>
                        <td></td>
                    }
                </tr>
              @if (Model.patientBroughtBy != "Police")
                {
                      <tr>
                        <td width="25%" style="font-weight: 600;">Id Type</td>
                        @if (Model.idTypeName != null)
                        {
                            <td width="25%">
                                @Model.idTypeName
                            </td>
                        }
                        else
                        {
                            <td width="25%">
                                <label>NaN</label>
                            </td>
