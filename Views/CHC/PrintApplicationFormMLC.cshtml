                        @if (Model.idNumber != "")
                        {
                            <td width="25%">@Model.idNumber
                            </td>}
                        else
                        {
                            <td width="25%">
                                <label>NaN</label>
                            </td>
                        }
                    </tr>
                 
                }*@

                <tr>
                    <td width="25%" style="font-weight: 600;">Mobile Number</td>
                    <td width="25%">
                        @Model.mobileNo
                    </td>
                    <td width="25%" style="font-weight: 600;">Email</td>
                    <td width="25%">@Model.emailId @*@DateTime.Parse(@Model.dob).ToShortDateString()*@
                    </td>
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Address</td>
                    <td width="25%">
                        @Model.broughtByaddress
                    </td>
                    <td width="25%" style="font-weight: 600;">State</td>
                    <td width="25%">
                        @Model.broughtBystateName
                    </td>
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">District</td>
                    <td width="25%">
                        @Model.broughtBydistrictName
                    </td>
                    <td width="25%" style="font-weight: 600;">Pin Code</td>
                    <td width="25%">
                        @Model.pinCode
                    </td>
                </tr>

                <tr>
                    <td width="25%" style="font-weight: 600;">Medico-Legal Date</td>
                    <td width="25%">
                        @Model.MLCDate
                    </td>
                    <td width="25%" style="font-weight: 600;">Medico-Legal Time</td>
                    <td width="25%">
                        @Model.MLCtime
                    </td>
                </tr>
            </tbody>
        </table>

        <h3 style="margin: 10px 0px 10px 0px; font-size: 16px; font-weight: bold; padding: 10px 0px; border-bottom: 1px dashed #000"><span style="margin: 0px 15px 0px 0px; padding: 0px;">2</span>Patient Detail:</h3>
        <table cellpadding="0" cellspacing="0" width="100%" class="table-user-information table table-bordered table-striped" style="font-size: 15px; border-collapse: collapse">
            <tbody>
                <tr>
                    <td width="25%" style="font-weight: 600;">Patient`s Name</td>
                    <td width="25%">
                        @Model.patientName
                    </td>
                    <td width="25%" style="font-weight: 600;">S/O D/O W/O</td>
                    <td width="25%">
                        @Model.patientFatherName
                    </td>
                  
                </tr>

                <tr>
                      <td width="25%" style="font-weight: 600;">Age About</td>
                   @if (Model.age != null)
                   {
                        <td width="25%">@Model.age</td>
                   }
                   else
                   {
                        <td width="25%">
                            <label>NaN</label>
                        </td>
                   }
                    <td width="25%" style="font-weight: 600;">Gender</td>
                    <td width="25%">@Model.patientGender</td>
                    
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Occupation</td>
                     @if (Model.occupation != "")
                     {
                        <td width="25%">@Model.occupation</td>
                     }
                     else
                     {
                        <td width="25%">
                            <label>NaN</label>
                        </td>
                     }
                     <td width="25%" style="font-weight: 600;">
                        State
                    </td>
                    <td width="25%">
                        @Model.stateName
                    </td>
                   
                  
                </tr>
                <tr>
                     <td width="25%" style="font-weight: 600;">
                        District
                    </td>
                    <td width="25%">
                        @Model.DistrictName
                    </td>
                      <td width="25%" style="font-weight: 600;">Address</td>
                    <td width="25%">
                        @Model.address
                    </td>
                   
                </tr>
                <tr>
                     <td width="25%" style="font-weight: 600;">Tehsil</td>
                    <td width="25%">@Model.tehsilName</td>
                    
                    <td width="25%" style="font-weight: 600;">Area/Road Name</td>
                    <td width="25%">@Model.areaRoadName</td>
                    
                    
                </tr>
                <tr>
                    <td width="25%" style="font-weight: 600;">Police Station</td>
                    <td width="25%">@Model.policeStation</td>
                    <td width="25%" style="font-weight: 600;">Details</td>
                    <td width="25%">@Model.details</td>
                   
                    
                </tr>
                <tr>
                     <td width="25%" style="font-weight: 600;">Medico-Legal Type</td>
                    <td width="25%">@Model.medicoLegalType</td>
                    <td width="25%" style="font-weight: 600;">OPD Number</td>
                    <td width="25%">@Model.OPDNumber</td>
                   
                    
                </tr>
                <tr>
                     <td width="25%" style="font-weight: 600;">Mark Of Identification</td>
                    <td width="25%">@Model.markOfIdentification</td>
                </tr>
                <tr>
                </tr>
            </tbody>
        </table>

        <h3 style="margin: 10px 0px 10px 0px; font-size: 16px; font-weight: bold; padding: 10px 0px; border-bottom: 1px dashed #000"><span style="margin: 0px 15px 0px 0px; padding: 0px;">3</span>Selected Health Unit For Appointment :</h3>
        <table cellpadding="0" cellspacing="0" width="100%" class="table-user-information table table-bordered table-striped" style="font-size: 15px; border-collapse: collapse">
            <tbody>
                <tr>
                    <td width="15%" style="font-weight: 600;">Health Unit</td>
                    <td width="20%">@Model.forwardtypeName</td>
                    <td width="15%" style="font-weight: 600;">District</td>
                    <td width="18%">@Model.healthUnitDistrictName</td>
                    <td width="15%" style="font-weight: 600;">Area</td>
                    <td width="17%">@Model.forwardtoName</td>
                </tr> 
            </tbody>
        </table>

        <h3 style="margin: 10px 0px 10px 0px; font-size: 16px; font-weight: bold; padding: 10px 0px; border-bottom: 1px dashed #000"><span style="margin: 0px 15px 0px 0px; padding: 0px;">4</span>Injury Details:</h3>
        <table cellpadding="0" cellspacing="0" width="100%" class="table-user-information table table-bordered table-striped" style="font-size: 15px; border-collapse: collapse">
            <tbody>
                <tr>
                    <td width="15%" style="font-weight: 600;">Doctor Name:</td>
                    <td width="20%">@Model.doctorName</td>
                    <td width="15%" style="font-weight: 600;">Designation:</td>
                    <td width="18%">@Model.Designation</td>
                </tr> 
                 <tr>
                    <td width="15%" style="font-weight: 600;">Seniority No:</td>
                    <td width="20%">@Model.seniorityNo</td>
                    <td width="15%" style="font-weight: 600;">Number of days for rest</td>
                    <td width="18%">@Model.restDays
                    </td>
                </tr> 
            </tbody>
        </table>

      
         <h3 style="margin: 10px 0px 10px 0px; font-size: 16px; font-weight: bold; padding: 10px 0px; border-bottom: 1px dashed #000"><span style="margin: 0px 15px 0px 0px; padding: 0px;">5</span>Enquiry Detail :</h3>
        <div id="childlist">
        </div>
       
        <table cellpadding="0" cellspacing="0" width="100%" class="table-user-information table table-bordered table-striped" style="font-size: 15px; border-collapse: collapse">
            <tbody>
                <tr>
                    <td width="25%">
                        <p style="text-align: left;">&nbsp;</p>
                        <p><strong>Date</strong></p>
                    </td>
                    <td width="25%">
                        <p style="text-align: left;">&nbsp;</p>
                        <p style="text-align: left;"><strong>Place</strong></p>
                    </td>
                    <td width="50%">
                        <p style="text-align: center;">
                            <strong>&nbsp;</strong>
                        </p>
                        <p style="text-align: center; font-weight: 600;">Signature of Person Incharge </p>
                    </td>
                </tr>
            </tbody>
        </table>
