           grid.Column("requestDate", header: "Application Date"),
           grid.Column("registrationNo", header: "Application No.", format: @<text><a href="@Url.Action("PrintApplicationFormIMC", "CHC", new { regisIdIMC = @OTPL_Imp.CustomCryptography.Encrypt(@item.regisIdIMC.ToString()) })"  target="_blank">@item.registrationNo</a></text>),
           grid.Column("fullName", header: "Full Name"),
            grid.Column("mobileNo", header: "Mobile Number"),

        grid.Column("RejectDate", header: "Reject Date"),
        grid.Column("RejectRemark", header: "Reject Remark"),
            grid.Column("appliedStatus", header: "Status")

                     ))
    </div>
