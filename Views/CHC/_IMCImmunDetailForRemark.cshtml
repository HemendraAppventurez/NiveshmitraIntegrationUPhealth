@model CCSHealthFamilyWelfareDept.Models.IMCAppProcessModel

@*@model List<CCSHealthFamilyWelfareDept.Models.IMCAppProcessModel>*@

<style>
    .webgrid-header a {
        color: white;
        text-decoration: none;
    }
</style>
<h3 style="margin: 10px 0px 10px 0px; font-size: 16px; font-weight: bold; padding: 10px 0px;"><span style="margin: 0px 15px 0px 0px; padding: 0px;"></span>List Of Immunization</h3>
<div class="table-responsive">
    @if (Model != null && Model.updateIMCList != null && Model.updateIMCList.Count > 0)
    {
        <table id="tblnominee" class="table table-bordered table-striped">
            <tbody>
                <tr class="cyan">
                    <th class="text-center" width="6%">S.No.</th>
                    <th>Immunization Name</th>
                    <th>Immunization Date</th>
                    <th>Doctor Name </th>
                    <th>Proof</th>
                    <th>Remark</th>
                   
                </tr>
                @for (int i = 0; i < Model.updateIMCList.Count; i++)
                {
                    <tr>
                        <td align="center">@(i + 1)</td>
                        <td>@Html.DisplayFor(m => m.updateIMCList[i].vaccineName) @Html.HiddenFor(m => m.updateIMCList[i].vaccineId)</td>
                        <td>@Html.DisplayFor(m => m.updateIMCList[i].ImmunizationDate) </td>
                        <td>@Html.DisplayFor(m => m.updateIMCList[i].doctorName)</td>
                           
                        <td>@if (Model.updateIMCList[i].immunizationProof == "Not Uploaded")
                            {
                                  <label>Not Uploaded</label>
                            }
                            else
                            {
                                 <a href="@Url.Content(Model.updateIMCList[i].immunizationProof)" target="_blank"><i class='fa fa-download' aria-hidden='true'></i></a>
                            }
                           
                          </td>
                        <td>@Html.TextBoxFor(m => m.updateIMCList[i].immunizationRemark) 
                            @Html.HiddenFor(m => m.updateIMCList[i].immunizationRemark)</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table class="table table-bordered">
            <thead class="bg-info">
                <tr>
                    <th>No Record Found</th>
                </tr>
            </thead>
        </table>
    }

</div>

