@model CCSHealthFamilyWelfareDept.Models.FICModel
@{
    ViewBag.Title = "AppliedApplicationFIC";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using CCSHealthFamilyWelfareDept.Models
@{
    SessionManager SM = new SessionManager();
}

<div class="content-title">
    <h3 class="main-title">
        <div class="text-left">स्वास्थ्य प्रमाणपत्र जारी करने हेतु <span class="small display-block">Issuance of Fitness Certificate</span></div>
    </h3>
</div>
<div id="content" class="dashboard padding-20 margin-bottom-50">
    <div class="row">
        <div class="col-md-12">
            <ul class="circle">
                <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("ReceivedApplicationFIC", "CHC")" class="red">
                        <img src="@Url.Content("~/images/womens-health.png")">
                        1. कुल लंबित आवेदन 
                      <span class="nmicon2">Total Pending Application</span>
                        <span class="nmicon badge">@Model.TotalCount</span> </a></li>
                <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("InProcessApplicationFIC", "CHC")" class="red">
                        <img src="@Url.Content("~/images/womens-health.png")">
                        2. आवेदन प्रक्रिया में है
                      <span class="nmicon2">In-Process Application </span>
                        <span class="nmicon badge">@Model.InProcessCount</span> </a></li>
                <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("ApprovedApplicationFIC", "CHC")" class="indigo">
                        <img src="@Url.Content("~/images/immunizations.png")">
                        3. स्वीकृत आवेदन 
                      <span class="nmicon2">Approved Application </span>
                        <span class="nmicon badge">@Model.ApprovedCount</span> </a></li>
                <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("RejectedApplicationFIC", "CHC")" class="cyan">
                        <img src="@Url.Content("~/images/registration.png")">
                        4. अस्वीकृत आवेदन 
                      <span class="nmicon2">Rejected Application </span>
                        <span class="nmicon badge">@Model.RejectedCount</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- InstanceEndEditable -->
    </div>
    <br />
    @if (SM.RollID != 8)
    {
        <h4 style="border-bottom: 1px solid #ccc; padding-bottom: 10px;">Application Form - Counter Registration</h4>

        <div class="row">
            <div class="col-md-12">
                <ul class="circle">
                    <li class="col-md-3 col-sm-6 col-xs-12">
                        <a href="@Url.Action("FICRegistration", "AppRegistration")" class="red">
                            <img src="@Url.Content("~/images/womens-health.png")">
                            Genral Fitness Application </a></li>
                    <li class="col-md-3 col-sm-6 col-xs-12">
                        <a href="@Url.Action("ILCtoFICRegistration", "AppRegistration")" class="red">
                            <img src="@Url.Content("~/images/womens-health.png")">
                            Illness to Fitness Application </a></li>
                    <li class="col-md-3 col-sm-6 col-xs-12">
                        <a href="@Url.Action("ViewFICInComplete", "AppRegistration")" class="red">
                            <img src="@Url.Content("~/images/womens-health.png")">
                            Incomplete Application </a></li>
                    <li class="col-md-3 col-sm-6 col-xs-12">
                        <a href="@Url.Action("ViewFICComplete", "AppRegistration")" class="indigo">
                            <img src="@Url.Content("~/images/immunizations.png")">
                            Complete Application </a></li>
                </ul>
            </div>
        </div>
    }
</div>
<div class="clearfix"></div>

