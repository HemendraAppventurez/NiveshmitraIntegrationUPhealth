@{
    ViewBag.Title = "RegistrationConfirmation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="content-title">
    <h3 class="main-title">Registration Confirmation
    </h3>
</div>
<div id="content" class="dashboard padding-20 margin-bottom-50">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <i class="fa fa-check-circle fa-3x text-success"></i>
                    </div>
                    <div class="col-md-12">
                        @if( ViewBag.CHCRegistrationNo!=null)
                        {  <h3 class="text-center">Your application has been submitted successfully <br /> Your Application No. is  <br /><strong class="text-success">@ViewBag.CHCRegistrationNo</strong> </h3>
                        }
                        else
                        {
                        <h3 class="text-center">Your application has been submitted successfully <br /> Your Application No. is  <br /><strong class="text-success">@ViewBag.MLCRegistrationNo</strong> </h3>
                        }
                      
                    </div>
                    <div class="col-md-12 text-center">
                        <hr />
                        <a href="@Url.Action("AdminDashboard", "Home", new { regisId=@ViewBag.NUHRegisId})" class="btn btn-success" >OK</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>