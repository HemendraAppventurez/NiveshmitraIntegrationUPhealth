@model CCSHealthFamilyWelfareDept.Models.FICModel

<style>
    .form-group label {
        color: #333;
        font-weight: 600;
    }
</style>


<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="title elipsis">
                <h4>Reason For Application 
                    <label class="pull-right" style="margin: 0px 0 0; padding-bottom: 0;">Registration No. :  @Model.registrationNo</label></h4>
            </span>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Reason </label>
                    </div>
                    <div class="col-md-3">
                        @Model.applicationReason
                    </div>
                    <div class="col-md-3">
                        <label>OPD Receipt Number</label>
                    </div>
                    <div class="col-md-3">
                        @Model.opdRecNo
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
                <div class="form-group">
                    @if (@Model.opdFilePath == "" || @Model.opdFilePath == null || @Model.opdFilePath == "Submitted By CHC" || @Model.opdFilePath == "NaN")
                    {
                        <div class="col-md-3">
                            <label>OPD document</label>
                        </div>
                        <div class="col-md-3">
                            <label></label>
                        </div>
                    }
                    else if (@Model.opdFilePath != "Submitted By CHC" && @Model.opdFilePath != "NaN")
                    {
                        <div class="col-md-3">
                            <label>OPD document</label>
                        </div>
                        
                        <div class="col-md-3">
                            <a href="@Url.Content(Model.opdFilePath)" target="_blank"><i class="fa fa-download fa-2x"></i></a>
                        </div>
                    }
                   
                    @if (Model.certificateNo != "" && Model.certificateNo != null)
                    {
                        <div class="col-md-3">
                            <label>Old Certificate No</label>
                        </div>
                        <div class="col-md-3">
                            @Model.certificateNo
                        </div>
                    }
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="title elipsis">
                <h4>Select Health Unit For Appointment</h4>
            </span>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label>Health Unit </label>
                        </div>
                        <div class="col-md-3">
                            @Model.forwardtypeName
                        </div>
                        <div class="col-md-3">
                            <label>District </label>
                        </div>
                        <div class="col-md-3">
                            @Model.healthUnitDistrictName
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label>CHC/ PHC/ DH Name </label>
                        </div>
                        <div class="col-md-3">
                            @Model.forwardtoName
                        </div>
                        <div class="col-md-3">
                            <label>Doctor Name</label>
                        </div>
                        <div class="col-md-3">
                            @Model.fitnessAdvicedBy
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label>Date of Check-up</label>
                        </div>
                        @if (Model.opdDate == "" || Model.opdDate == null)
                        {
                            <div class="col-md-3">
                                <label>NaN</label>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-3">
                               @Model.opdDate
                            </div>
                        }

                        <div class="col-md-3">
                            <label>Treatment From</label>
                        </div>
                        @if (Model.treatmentFrom == "" || Model.treatmentFrom == null)
                        {
                            <div class="col-md-3">
                                <label>NaN</label>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-3">
                                @DateTime.Parse(@Model.treatmentFrom).ToShortDateString()
                            </div>
                        }


                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label>Treatment To</label>
                        </div>
                        @if (Model.treatmentto == "" || Model.treatmentto == null)
                        {
                            <div class="col-md-3">
                                <label>NaN</label>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-3">
                                @DateTime.Parse(@Model.treatmentto).ToShortDateString()
                            </div>
                        }
                        @if (Model.certificateNo != null && Model.certificateNo != "")
                        {
                        <div class="col-md-3">
                            <label>Illnes Detail</label>
                        </div>
                        <div class="col-md-3">
                            @Model.illnessDetail
                        </div>
                        }
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="title elipsis">
                <h4>Personal Details </h4>
            </span>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Full  Name </label>
                    </div>
                    <div class="col-md-3">
                        @Model.fullName
                    </div>
                    <div class="col-md-3">
                        <label>Father's name</label>
                    </div>
                    <div class="col-md-3">
                        @Model.fatherName
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Date of Birth</label>
                    </div>
                    <div class="col-md-3">
                        @DateTime.Parse(@Model.dob).ToShortDateString()
                    </div>
                    <div class="col-md-3">
                        <label>Gender</label>
                    </div>
                    <div class="col-md-3">
                        @Model.gender
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Category</label>
                    </div>
                    <div class="col-md-3">
                        @Model.categoryName
                    </div>
                    <div class="col-md-3">
                        <label>Mobile Number</label>
                    </div>
                    <div class="col-md-3">
                        @Model.mobileNo
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Email Address</label>
                    </div>
                    @if (Model.emailId == "" || Model.emailId == null)
                    {
                        <div class="col-md-3">
                            <label>NaN</label>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-3">
                            @Model.emailId
                        </div>
                    }

                    <div class="col-md-3">
                        <label>Address</label>
                    </div>
                    <div class="col-md-3">
                        @Model.opdAddress
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
                <div class="form-group">

                    <div class="col-md-3">
                        <label>State</label>
                    </div>
                    <div class="col-md-3">
                        @Model.StateName
                    </div>

                    <div class="col-md-3">
                        <label>District</label>
                    </div>
                    <div class="col-md-3">
                        @Model.DistrictName
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
                <div class="form-group">

                    <div class="col-md-3">
                        <label>OPD Pin Code</label>
                    </div>
                    <div class="col-md-3">
                        @Model.opdPinCode
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="title elipsis">
                <h4>Medical History(if Any) :</h4>
            </span>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>DO You Have Any Medical History?</label>
                    </div>
                    <div class="col-md-3">
                        @Model.isMedicalHistory
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
                @if (Model.isMedicalHistory == "Yes")
                { 
                    <div class="form-group">

                        <div class="col-md-3">
                            <label>Details of Medical History</label>
                        </div>
                        <div class="col-md-3">
                            @Model.detailsMedicalHistory
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                }
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="title elipsis">
                <h4>Upload Documents</h4>
            </span>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Id Type</label>
                    </div>
                    <div class="col-md-3">
                        @Model.idTypeName
                    </div>
                    <div class="col-md-3">
                        <label>Id No.</label>
                    </div>
                    <div class="col-md-3">
                        @Model.idNumber
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Id File</label>
                    </div>
                    @if (Model.idFilePath == "NaN" || Model.idFilePath == "Submitted By CHC")
                    {
                        <div class="col-md-3">
                          
                        </div>
                    }
                    else
                    {
                        <div class="col-md-3">
                            <a href="@Url.Content(Model.idFilePath)" target="_blank"><i class="fa fa-download fa-2x"></i></a>
                        </div>
                    }

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="clearfix"></div>
