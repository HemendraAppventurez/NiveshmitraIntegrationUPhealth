@{
    ViewBag.Title = "ILCDashBoard";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="content-title">
    <h3 class="main-title">
        <strong>बीमारी प्रमाणपत्र डैशबोर्ड  <span class="small">Illness Certificate  Dashboard</span></strong>
    </h3>
</div>


<div id="content" class="dashboard padding-90 margin-bottom-50">
    <div class="row">
        <div class="col-md-12">
            <ul class="circle">
               
                <li class="col-md-4 col-sm-6 col-xs-12">
                    <a href="@Url.Action("RegistrationInstructions", "ILC",new
                                        {AppType=@OTPL_Imp.CustomCryptography.Encrypt("New"),
                                        })" class="red" >
                        <img src="@Url.Content("~/images/womens-health.png")"><br />
                        New Application 
                       
                    </a>
                </li>
                
               <li class="col-md-4 col-sm-6 col-xs-12">
                    <a href="@Url.Action("RegistrationInstructions", "ILC",new
                                        {AppType=@OTPL_Imp.CustomCryptography.Encrypt("Old"),
                                        })" class="red" >
                        <img src="@Url.Content("~/images/womens-health.png")"><br />
                        Application For Extended Days
                       
                    </a>
                </li>
                <li class="col-md-4 col-sm-6 col-xs-12">
                    <a href="@Url.Action("ViewILC", "ILC")" class="indigo">
                        <img src="@Url.Content("~/images/view_icon.png")"><br />
                        View Status and Print Application Form
                     
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
