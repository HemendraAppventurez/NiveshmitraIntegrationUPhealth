}
else
{

    if (Model != null && Model.Count() > 0)
    {
        
    <div class="row">
        <div class="col-md-12">
            <ul class="circle">

                @if (Model != null && Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        sNo++;
                        
                    <li class="col-md-3 col-sm-6 col-xs-12">
                        <a href="#" class="red none" style="height: 370px">
