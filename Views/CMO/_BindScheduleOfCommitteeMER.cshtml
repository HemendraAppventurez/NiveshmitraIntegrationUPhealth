@model List<CCSHealthFamilyWelfareDept.Models.MERstatusUpdationModel>

@if (Model != null && Model.Count() > 0)
{
<div class="col-md-12 text-right margin-top-25">
    <div class="row">
        <label>Total Engagement : @Model.Count()</label>
    </div>
</div>
<table class="table table-bordered">
    <thead>
        <tr class="webgrid-header">
            <th valign="top">Sl. No. </th>
            <th valign="top">Inspection Date</th>
            <th valign="top">Application No</th> 
            <th valign="top">Patient Name</th>
            <th valign="top">Patient Disease</th>
            <th valign="top">patient Employee Relation</th>
            
        </tr>
    </thead>
    <tbody>
        @{
    int slNo = 1;
                    }
        @foreach(var item in Model)
        {
           
        <tr>
            <td class="white">@slNo</td>
            <td>@item.inspectionDate</td>
            <td>@item.registrationNo</td>
            <td>@item.patientName</td>
            <td>@item.patientdiseaseName</td>
            <td>@item.patientrelationsWithEmployee</td>
            </tr>
            slNo++;
        } 
    </tbody>
</table>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <span class="text-danger form-control" style="font-weight:600;font-size:18px;">No record found !</span>
        </div>
    </div>
}
