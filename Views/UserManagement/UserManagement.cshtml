@{
    ViewBag.Title = "UserManagement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using CCSHealthFamilyWelfareDept.Models
@{
    SessionManager SM = new SessionManager();
}

<div class="content-title">
    <h3 class="main-title">
        <div class="col-md-12 text-left">User Management<span class="small display-block">User Management</span></div>
    </h3>
</div>

<div id="content" class="dashboard padding-20 margin-bottom-50">
    <div class="row">
        <div class="col-md-12">
            <ul class="circle">
                @if (SM.RollID == 2)
                {
                <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("CreateUser", "UserManagement")" class="red">
                        <img src="@Url.Content("~/images/womens-health.png")">
                        Create User </a></li>
                <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("ViewUser", "UserManagement")" class="red">
                        <img src="@Url.Content("~/images/womens-health.png")">
                        View Users </a></li>
                     <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("Committee", "UserManagement")" class="red">
                        <img src="@Url.Content("~/images/womens-health.png")">
                        Create Committee </a></li>
                    <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("ViewCommittee", "UserManagement")" class="red">
                        <img src="@Url.Content("~/images/womens-health.png")">
                        View Committee </a></li>
                    <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("ManageAccount", "UserManagement")" class="red">
                        <img src="@Url.Content("~/images/womens-health.png")">
                        Manage Account </a></li>
                }
                else if (SM.RollID == 18)
                {
                    <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("CMOUser", "UserManagement")" class="red">
                        <img src="@Url.Content("~/images/womens-health.png")">
                        CMO </a></li>
                <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("CMSUser", "UserManagement")" class="red">
                        <img src="@Url.Content("~/images/womens-health.png")">
                        CMS </a></li>
                    <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("CHCUser", "UserManagement")" class="red">
                        <img src="@Url.Content("~/images/womens-health.png")">
                        CHC </a></li> 
                }
                else if (SM.RollID == 8)
                {
                    <li class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("ManageAccount", "UserManagement")" class="red">
                        <img src="@Url.Content("~/images/womens-health.png")">
                        Manage Account </a></li>
                }
            </ul>
        </div>
    </div>
</div>
